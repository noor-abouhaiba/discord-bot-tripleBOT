<div class="card user-profile-card">
    <div class="card-image">
        <figure class="image is-4by3">
            <img src="./resources/discord-bot-avatar.png" alt="tripleBOT image">
        </figure>
    </div>
    <div class="card-content">
        <div class="media">
            <div class="media-left">
                <figure class="image is-48x48">
                    <img src="https://cdn.discordapp.com/avatars/<%= userID %>/<%= userAvatar %>.png" alt="User avatar">
                </figure>
            </div>

            <div class="media-content">
                <p class="title is-6"><%= username %>#<b><%= discriminator %></b></p>
                <p class="subtitle is-10 "><%= guild %>:<b><%= verification %></b></p>
            </div>
        </div>

        <div class="content">
            <p>Twitch: <b><%= twitch %></b></p>
        </div>
    </div>
</div>
